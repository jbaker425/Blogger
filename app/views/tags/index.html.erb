<h1>All Tags</h1>

<ul id="tags">
    <% @tags.each do |tag| %>
        <li id="tags">
            <%= link_to tag.name, tag_path(tag), class: "tag_title", id: "tag_#{tag.id}" %>
            <%= link_to "Delete", tag_path(tag), method: :delete,
             data: {confirm: "Are you sure you want to delete this tag?"},
             class: "delete_link" %>
        </li>
    <% end %>
</ul>
